<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/18.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chat.local.javalocalchat.SignUpController"
            styleClass="anchor-pane"
>

    <Pane fx:id="sideBackground"
          layoutX="50.0"
          layoutY="25.0"
          prefHeight="350.0"
          prefWidth="500.0"
          styleClass="pane"
    >

        <TextField fx:id="loginField"
                   layoutX="150.0"
                   layoutY="104.0"
                   prefHeight="32.0"
                   prefWidth="200.0"
                   promptText="Login"
        />

        <TextField fx:id="mailField"
                   layoutX="150.0"
                   layoutY="159.0"
                   prefHeight="32.0"
                   prefWidth="200.0"
                   promptText="E-mail"
        />

        <PasswordField fx:id="passwordField"
                       layoutX="150.0"
                       layoutY="214.0"
                       prefHeight="32.0"
                       prefWidth="200.0"
                       promptText="Password"
        />

        <Button fx:id="signUpButton"
                layoutX="150.0"
                layoutY="267.0"
                mnemonicParsing="false"
                prefHeight="32.0"
                prefWidth="200.0"
                text="Sign up"
                textAlignment="CENTER"
        />

        <Label layoutX="206.0"
               layoutY="40.0"
               prefHeight="34.0"
               prefWidth="89.0"
               text="SIGN UP"
               textAlignment="CENTER"
        >
            <font>
                <Font size="23.0" />
            </font>
        </Label>

      <Button fx:id="backButton"
              layoutX="425.0"
              layoutY="28.0"
              mnemonicParsing="false"
              text="Back"
      />
    </Pane>
</AnchorPane>
