<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/18.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chat.local.javalocalchat.ForgotYourPasswordController"
            styleClass="anchor-pane"
>

    <Pane fx:id="sideBackground"
          layoutX="50.0"
          layoutY="25.0"
          prefHeight="350.0"
          prefWidth="500.0"
          styleClass="pane"
    >

        <Label alignment="CENTER"
               layoutX="100.0"
               layoutY="41.0"
               prefHeight="34.0"
               prefWidth="300.0"
               text="ENTER YOUR LOGIN"
               textAlignment="CENTER"
        >
            <font>
                <Font size="23.0" />
            </font>
        </Label>

        <TextField fx:id="loginField"
                   layoutX="150.0"
                   layoutY="159.0"
                   prefHeight="32.0"
                   prefWidth="200.0"
                   promptText="Login"
        />

        <Button fx:id="confirmLoginButton"
                layoutX="150.0"
                layoutY="214.0"
                mnemonicParsing="false"
                prefHeight="32.0"
                prefWidth="200.0"
                text="Confirm login"
                textAlignment="CENTER"
        />

        <Button fx:id="backButton"
                layoutX="425.0"
                layoutY="29.0"
                mnemonicParsing="false"
                text="Back"
        />
    </Pane>
</AnchorPane>
