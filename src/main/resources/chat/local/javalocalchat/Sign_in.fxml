<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            styleClass="anchor-pane"
            xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chat.local.javalocalchat.SignInController"
>

    <Pane fx:id="sideBackground"
          layoutX="50.0"
          layoutY="25.0"
          prefHeight="350.0"
          prefWidth="500.0"
          styleClass="pane"
    >

        <TextField fx:id="loginField"
                   layoutX="150.0"
                   layoutY="104.0"
                   prefHeight="32.0"
                   prefWidth="200.0"
                   promptText="Login"
        />

        <PasswordField fx:id="passwordField"
                       layoutX="150.0"
                       layoutY="159.0"
                       prefHeight="32.0"
                       prefWidth="200.0"
                       promptText="Password"
        />

        <TextField fx:id="IPAddressField"
                   layoutX="150.0"
                   layoutY="214.0"
                   prefHeight="32.0"
                   prefWidth="200.0"
                   promptText="0.0.0.0"
        />

        <Button fx:id="signInButton"
                layoutX="150.0"
                layoutY="269.0"
                mnemonicParsing="false"
                prefHeight="32.0"
                prefWidth="200.0"
                text="Sign in"
                textAlignment="CENTER"
        />

        <Label layoutX="206.0"
               layoutY="40.0"
               prefHeight="34.0"
               prefWidth="89.0"
               text="SIGN IN"
               textAlignment="CENTER"
        >
            <font>
                <Font size="23.0" />
            </font>
        </Label>

        <Hyperlink fx:id="forgotPassword"
                   layoutX="185.0"
                   layoutY="310.0"
                   styleClass="hyper-link"
                   text="Forgot your password?"
                   textAlignment="CENTER"
        />

        <Button fx:id="registrationButton"
                layoutX="393.0"
                layoutY="28.0"
                mnemonicParsing="false"
                text="Register"
        />
    </Pane>
</AnchorPane>